#!/usr/bin/env bash
# This script prints the information about school

if [ -e "school" ]
then
     echo "school is a regular file"
     if [ -s "school" ] 
     then 
	   echo "school file exists" 
     else
           echo "file is empty"
     fi

     if [ -f "school" ]	
     then
 	     echo "file is not empty"
     fi
else
     echo "school file does not exist"
fi

