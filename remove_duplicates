#!/bin/bash
# Create or clear the log file
> removed_duplicates_log

# Create or append to .gitignore to prevent re-pushing of removed files
echo "*~" > .gitignore
echo "*.swp" >> .gitignore

# Iterate over files in the current directory and its subdirectories
find . -type f | while read -r file; do
    # Check if the file ends with "~" or ".swp"
    if [[ "$file" == *~ || "$file" == *.swp ]]; then
        # Remove the file
        rm -f "$file"
        echo "Removed: $file" >> removed_duplicates_log
    fi
done

